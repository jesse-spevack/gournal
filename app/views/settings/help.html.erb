<%# Help page for habit management %>
<div class="paper-background">
  <div class="container">
    <div class="dot-grid-overlay">
      
      <%# Back button %>
      <div class="settings-link-container">
        <%= link_to "<", settings_path, class: "settings-link" %>
      </div>
      
      <%# Header %>
      <header class="month-header">
        <h1>Habit Management Help</h1>
      </header>
      
      <%# Help Content %>
      <div class="help-content">
        
        <section class="help-section">
          <h2 class="help-section-title">Adding new habits</h2>
          <div class="help-text">
            <p>• Type your habit name in the field at the bottom of the list</p>
            <p>• Press Enter or click away to save</p>
            <p>• New habits will appear as bullet points in your list</p>
          </div>
        </section>
        
        <section class="help-section">
          <h2 class="help-section-title">Editing existing habits</h2>
          <div class="help-text">
            <p>• Click on any habit name to edit it</p>
            <p>• The text will become editable with a dashed underline</p>
            <p>• Press Enter to save your changes</p>
            <p>• Press Escape to cancel without saving</p>
          </div>
        </section>
        
        <section class="help-section">
          <h2 class="help-section-title">Removing habits</h2>
          <div class="help-text">
            <p>• Click on a habit name to edit it</p>
            <p>• Delete all the text to remove the habit</p>
            <p>• Press Enter to confirm removal</p>
            <p>• Removed habits won't appear in your tracker</p>
          </div>
        </section>
        
        <section class="help-section">
          <h2 class="help-section-title">Changing the order of habits</h2>
          <div class="help-text">
            <p>• Drag and drop habits to reorder them</p>
            <p>• Click and hold on any habit name to start dragging</p>
            <p>• Drop the habit in your preferred position</p>
            <p>• The new order will be saved automatically</p>
          </div>
        </section>
        
      </div>
      
    </div>
  </div>
</div>