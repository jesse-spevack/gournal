<%# Help page for profile link %>
<div class="paper-background">
  <div class="container">
    <div class="dot-grid-overlay">
      
      <%# Back button %>
      <div class="settings-link-container">
        <%= link_to "<", settings_path, class: "settings-link" %>
      </div>
      
      <%# Header %>
      <header class="month-header">
        <h1>Help</h1>
      </header>
      
      <%# Help Content %>
      <div class="help-content">
        
        <section class="help-section">
          <h2 class="help-section-title">Setting up your profile link</h2>
          <div class="help-text">
            <p>1. Click on "your-custom-share-link" to edit it</p>
            <p>2. Type your custom URL (letters, numbers, dashes, underscores only)</p>
            <p>3. Press Enter to save</p>
            <p>4. Click the full URL to copy it to your clipboard</p>
          </div>
        </section>
        
        <section class="help-section">
          <h2 class="help-section-title">Your profile link</h2>
          <div class="help-text">
            <p>1. Your link becomes verynormal.dev/your-custom-name</p>
            <p>2. Anyone can visit this link to see your public progress</p>
            <p>3. Delete your custom name to disable the link entirely</p>
          </div>
        </section>
        
      </div>
      
    </div>
  </div>
</div>