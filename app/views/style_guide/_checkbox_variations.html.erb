<div class="section">
  <h2 class="section-title">Checkbox Variations</h2>
  
  <%= render 'style_guide/checkbox_box_variations' %>
  <%= render 'style_guide/checkbox_x_variations' %>
  <%= render 'style_guide/checkbox_filled_variations' %>
  
  <div class="subsection">
    <h3 class="subsection-title">Interactive Examples</h3>
    <div class="checkbox-showcase">
      <div class="checkbox-grid">
        <!-- Interactive checkbox with day number -->
        <div class="checkbox-item">
          <label class="checkbox-wrapper" 
                 data-controller="checkbox" 
                 data-checkbox-checked-class="checkbox-checked" 
                 data-checkbox-unchecked-class="checkbox-unchecked" 
                 data-checkbox-x-visible-class="x-visible" 
                 style="display: flex; align-items: center; gap: 12px; cursor: pointer;">
            <span class="day-number" style="font-size: 11px; color: var(--ink-primary); font-family: 'Courier New', monospace; opacity: 0.75; min-width: 20px; text-align: right;">1</span>
            <input type="checkbox" data-checkbox-target="input" data-action="change->checkbox#toggle" style="position: absolute; opacity: 0; cursor: pointer; height: 0; width: 0;">
            <div class="checkbox-custom">
              <div class="checkbox-box">
                <svg viewBox="0 0 24 24">
                  <path class="box-path checkbox-unchecked" data-checkbox-target="boxPath" d="M 3.3,3.8 C 3.1,3.3 3.4,2.9 3.9,2.8 L 20.2,3.1 C 20.7,3.2 21.1,3.5 21.2,4 L 20.9,20.3 C 20.8,20.8 20.5,21.1 20,21.2 L 3.7,20.9 C 3.2,20.8 2.9,20.5 2.8,20 L 3.1,3.7 Z" />
                </svg>
              </div>
              <div class="x-marks-container">
                <div class="x-mark" data-checkbox-target="xMark">
                  <svg viewBox="0 0 24 24">
                    <path class="x-path-1" style="stroke-width: 2.4; opacity: 0.9;" d="M 6.8,6.5 C 7.5,7.2 16.8,16.5 18.2,18.5" />
                    <path class="x-path-2" style="stroke-width: 2.0; opacity: 0.85;" d="M 18.5,6.8 C 17.8,7.5 7.5,17.8 6.5,18.2" />
                  </svg>
                </div>
              </div>
            </div>
          </label>
          <span class="checkbox-label">Day 1</span>
        </div>

        <!-- Pre-checked interactive checkbox -->
        <div class="checkbox-item">
          <label class="checkbox-wrapper" 
                 data-controller="checkbox" 
                 data-checkbox-checked-class="checkbox-checked" 
                 data-checkbox-unchecked-class="checkbox-unchecked" 
                 data-checkbox-x-visible-class="x-visible" 
                 style="display: flex; align-items: center; gap: 12px; cursor: pointer;">
            <span class="day-number" style="font-size: 11px; color: var(--ink-primary); font-family: 'Courier New', monospace; opacity: 0.75; min-width: 20px; text-align: right;">15</span>
            <input type="checkbox" checked data-checkbox-target="input" data-action="change->checkbox#toggle" style="position: absolute; opacity: 0; cursor: pointer; height: 0; width: 0;">
            <div class="checkbox-custom">
              <div class="checkbox-box">
                <svg viewBox="0 0 24 24">
                  <path class="box-path checkbox-checked" data-checkbox-target="boxPath" d="M 3.5,3.2 C 3.2,3.1 3.6,2.7 4.1,2.9 L 20.5,3.5 C 21,3.6 21.3,3.8 21.3,4.3 L 20.5,20.8 C 20.4,21.3 20.1,21.5 19.6,21.4 L 3.2,20.6 C 2.7,20.5 2.5,20.2 2.6,19.7 L 3.5,3.2 Z" />
                </svg>
              </div>
              <div class="x-marks-container">
                <div class="x-mark x-visible" data-checkbox-target="xMark">
                  <svg viewBox="0 0 24 24">
                    <path class="x-path-1" style="stroke-width: 2.2; opacity: 0.88;" d="M 7.2,7.8 C 6.9,8.5 15.2,17.2 17.8,18.8" />
                    <path class="x-path-2" style="stroke-width: 2.5; opacity: 0.92;" d="M 17.2,7.2 C 17.9,6.8 9.5,16.5 7.8,18.2" />
                  </svg>
                </div>
              </div>
            </div>
          </label>
          <span class="checkbox-label">Day 15 (Checked)</span>
        </div>
      </div>
    </div>
  </div>
</div>